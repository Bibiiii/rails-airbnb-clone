<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <% if @user.photo? %>
        <%= cl_image_tag @user.photo.path, width: 200, height: 300, crop: :fill %>
      <% end %>
      <h1><%= @user.username %></h1>
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <h3><%= @user.bio %></h3>
    </div>
  </div>
</div>
