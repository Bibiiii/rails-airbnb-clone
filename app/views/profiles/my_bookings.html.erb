            <p> <%= booking.start_date %> - <%= booking.end_date %> </p>
            <% price = booking.animal.price * (booking.end_date - booking.start_date).to_i %>
            <p> £<%= price %> </p>
          </div>
          <img class="card-user avatar" src="user.jpg">
          <%= link_to "", booking_path(booking), class:"card-link"%>
        </div>

      <% end %>

      </div>
    <% end %>
  </div>

  <h3>Denied</h3>
