<%= simple_form_for [@animal, @booking] do |f| %>
  <form>
    <%= f.input :start_date, as: :string, input_html:{id: "calendar", placeholder: "from"}, class: "pick-date" %>
    <%= f.input :end_date, as: :string, input_html:{id: "calendar2", placeholder: "until"}, class: "pick-date" %>
    <div class="text-center book-animal">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </form>
<% end %>


<% content_for(:after_js) do %>
  <script>
    console.log("js is loaded")
    var myCalendar = new dhtmlXCalendarObject(["calendar","calendar2"]);
  </script>
<% end %>
