
<div class="container">
  <div class="row">
    <div class="col-xs-6">

      <h1 class="text-center"> <%= @animal.name.capitalize %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-xs-6">

      <p> <strong> Bio: </strong> <%= @animal.bio %> </p>
      <p> <strong> Price per day: </strong> <%= @animal.price %> </p>
    </div>

    <div class="col-xs-6">
      <div id="map"> </div>
      <script>
        function initMap() {
          var uluru = {lat: -25.363, lng: 131.044};
          var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 4,
            center: uluru
          });
          var marker = new google.maps.Marker({
            position: uluru,
            map: map
          });
        }
      </script>
      <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAB15Xrkdt-DO-ycMFyhqpKQMNeZ-lei4k&callback=initMap">
    </script>
  </div>

</div>
</div>





<div class="container">
  <div class="row">
    <% @animal.photos.each do |photo| %>
    <div class="col-xs-3">
      <%= cl_image_tag photo.path, width: 260, height: 200, crop: :fill, class: "show-picture" %>
    </div>
    <% end %>



  </div>
</div>
