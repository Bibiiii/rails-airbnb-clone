<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">



      <%= simple_form_for(@animal) do |f| %>

        <% if @animal.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @animal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>


        <%= f.input :name%>
        <%= f.input :species, :collection => ["Spider", "Snake", "Elephant", "T-Rex", "Unicorn", "Centaur", "Great-White Shark", "Achilles son of God"] %>
        <%= f.input :bio%>
        <%= f.input :location%>
        <%= f.input :price%>
        <%= f.input :photos, as: :attachinary %>
        <%= f.submit "Submit your animal", class: "btn btn-primary" %>
    <% end %>

    </div>
  </div>
</div>
