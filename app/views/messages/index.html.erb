<div class="container">

  <div class="clear-header">
    <h1>Message Log</h1>
    <%= link_to conversations_path do %>
      <p><i class="fa fa-undo" aria-hidden="true" style="font-size: 20px"></i> Go back</p>
    <% end %>
  </div>

  <div class="messages">

    <% if @over_ten %>
      <%= link_to "all messages", conversation_messages_path(@conversation, {read_option: 'all'}) %>
    <% end %>

    <% @messages.each do |message| %>
      <% if message.body %>
        <% user = User.find(message.user_id) %>
        <div class="message">
          From:
          <% if user.first_name? %>
            <div class="user_name"><%= user.first_name %></div>
            <div><p>  <%= message.body %></p></div>
            <div><%= message.message_time.strftime("%l:%M%p on the %e %b") %></div>
          <% elsif user.username?  %>
            <div class="user_name"><%= user.username %></div>
            <div><p>  <%= message.body %></p></div>
            <div><%= message.message_time.strftime("%l:%M%p on the %e %b") %></div>
          <% else %>
            <div class="user_name"><%= user.email %></div>
            <div><p>  <%= message.body %></p></div>
            <div><%= message.message_time.strftime("%l:%M%p on the %e %b") %></div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="padded-boxling text-center">
    <h1>Write a message</h1>
  </div>


<%= render 'form', message: @message, conversation: @conversation %>

</div>
